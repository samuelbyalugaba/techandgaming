{
  "entities": {
    "Game": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Game",
      "type": "object",
      "description": "Represents a game in the Tech And Gaming application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Game entity."
        },
        "title": {
          "type": "string",
          "description": "The title of the game."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the game."
        },
        "trailerUrl": {
          "type": "string",
          "description": "URL of the game's trailer.",
          "format": "uri"
        },
        "screenshotUrls": {
          "type": "array",
          "description": "URLs of screenshots of the game.",
          "items": {
            "type": "string"
          }
        },
        "mechanics": {
          "type": "string",
          "description": "Description of the game mechanics."
        },
        "playUrl": {
          "type": "string",
          "description": "URL to play the game on its respective subdomain.",
          "format": "uri"
        },
        "genre": {
          "type": "string",
          "description": "The genre of the game."
        },
        "difficulty": {
          "type": "string",
          "description": "The difficulty level of the game."
        },
        "tagIds": {
          "type": "array",
          "description": "References to Tags. (Relationship: Game N:N Tag)",
          "items": {
            "type": "string"
          }
        },
        "leaderboardId": {
          "type": "string",
          "description": "Reference to Leaderboard. (Relationship: Game 1:1 Leaderboard)"
        }
      },
      "required": [
        "id",
        "title",
        "description",
        "trailerUrl",
        "screenshotUrls",
        "mechanics",
        "playUrl",
        "genre",
        "difficulty",
        "tagIds",
        "leaderboardId"
      ]
    },
    "BlogPost": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BlogPost",
      "type": "object",
      "description": "Represents a blog post in the Tech And Gaming application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the BlogPost entity."
        },
        "title": {
          "type": "string",
          "description": "The title of the blog post."
        },
        "content": {
          "type": "string",
          "description": "The markdown content of the blog post."
        },
        "publicationDate": {
          "type": "string",
          "description": "The date and time the blog post was published.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "title",
        "content",
        "publicationDate"
      ]
    },
    "Tag": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Tag",
      "type": "object",
      "description": "Represents a tag for games in the Tech And Gaming application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Tag entity."
        },
        "name": {
          "type": "string",
          "description": "The name of the tag."
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "Leaderboard": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Leaderboard",
      "type": "object",
      "description": "Represents a leaderboard for a specific game.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Leaderboard entity."
        },
        "gameId": {
          "type": "string",
          "description": "Reference to Game. (Relationship: Leaderboard 1:1 Game)"
        },
        "entries": {
          "type": "array",
          "description": "Array of leaderboard entries.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "gameId",
        "entries"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/games/{gameId}",
        "definition": {
          "entityName": "Game",
          "schema": {
            "$ref": "#/backend/entities/Game"
          },
          "description": "Stores game information, including title, description, trailer URL, screenshots, mechanics, play URL, genre, difficulty, tag references, and leaderboard reference.",
          "params": [
            {
              "name": "gameId",
              "description": "Unique identifier for the game."
            }
          ]
        }
      },
      {
        "path": "/blogPosts/{blogPostId}",
        "definition": {
          "entityName": "BlogPost",
          "schema": {
            "$ref": "#/backend/entities/BlogPost"
          },
          "description": "Stores blog post content, including title, content (markdown), and publication date.",
          "params": [
            {
              "name": "blogPostId",
              "description": "Unique identifier for the blog post."
            }
          ]
        }
      },
      {
        "path": "/tags/{tagId}",
        "definition": {
          "entityName": "Tag",
          "schema": {
            "$ref": "#/backend/entities/Tag"
          },
          "description": "Stores tags for games, including name.",
          "params": [
            {
              "name": "tagId",
              "description": "Unique identifier for the tag."
            }
          ]
        }
      },
      {
        "path": "/leaderboards/{leaderboardId}",
        "definition": {
          "entityName": "Leaderboard",
          "schema": {
            "$ref": "#/backend/entities/Leaderboard"
          },
          "description": "Stores leaderboard information for each game, including the game reference and leaderboard entries. Includes denormalized `gameId` for authorization independence.",
          "params": [
            {
              "name": "leaderboardId",
              "description": "Unique identifier for the leaderboard."
            }
          ]
        }
      }
    ]
  }
}
